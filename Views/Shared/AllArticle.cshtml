@model Article

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.Category</p>
    <p>@Model.ShortDescription</p>
    <p><a class="btn btn-warning" asp-controller="" asp-action="" asp-route-id="@Model.Id">More</a></p>
</div>